@model ShoppingCart

<form method="post">
    <input hidden asp-for="bookId" />
    <div class="card shadow border-0 mt-4 w-100">
        <div class="card-header bg-primary bg-gradient m-lg-1 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.book.title</h3>
                    <p class="text-white-50 fw-semibold mb-0">by @Model.book.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row mt-0">
                    <div class="col-12 col-lg-4 ">
                        <img src="@Model.book.ImageUrl" alt="Product Image" class="img-fluid rounded w-60" />
                    </div>
                    <div class="col-12 col-lg-7 mt-4 mt-lg-0">
                        <div>
                            <span class="badge bg-danger">@Model.book.Category.Name</span>
                        </div>
                        <div class="mt-3">
                            <h5 class="text-muted">ISBN : @Model.book.ISBN</h5>
                            <h5 class="text-muted">List Price: <strike>@Model.book.ListPrice.ToString("c")</strike></h5>
                        </div>
                        <div class="row mt-3 text-center">
                            <div class="col-3 border-bottom">
                                <div>Quantity</div>
                            </div>
                            <div class="col-3 border-bottom">
                                <div>1-50</div>
                            </div>
                            <div class="col-3 border-bottom">
                                <div>51-100</div>
                            </div>
                            <div class="col-3 border-bottom">
                                <div>100+</div>
                            </div>
                        </div>
                        <div class="row text-center text-danger" style=" font-weight:bold">
                            <div class="col-3">
                                <div>Price</div>
                            </div>
                            <div class="col-3">
                                <div>@Model.book.Price.ToString("c")</div>
                            </div>
                            <div class="col-3">
                                <div>@Model.book.Price50.ToString("c")</div>
                            </div>
                            <div class="col-3">
                                <div>@Model.book.Price100.ToString("c")</div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <p class="text-secondary">@Html.Raw(Model.book.Description)</p>
                        </div>
                        <div class="row pl-2 mt-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text bg-primary text-white border-0 fw-   semibold" id="input-group-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient fw-semibold btn-sm text-uppercase form-control" style="height:50px;">
                        Back To List
                    </a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-primary bg-gradient text-uppercase fw-semibold form-control" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>

</form>