@model Book

<div class="card shadow border-0 mt-4 w-100">
    <div class="card-header bg-primary bg-gradient m-lg-1 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white text-uppercase">@Model.title</h3>
                <p class="text-white-50 fw-semibold mb-0">by @Model.Author</p>
            </div>
        </div>
    </div>
    <div class="card-body" >
        <div class="py-3">
            <div class="row mt-0">
                <div class="col-12 col-lg-4 " >
                    <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded w-60" />
                </div>
                <div class="col-12 col-lg-7 mt-4 mt-lg-0">
                    <div>
                        <span class="badge bg-danger">@Model.Category.Name</span>
                    </div>
                    <div class="mt-3">
                        <h5 class="text-muted">ISBN : @Model.ISBN</h5>
                        <h5 class="text-muted">List Price: <strike>@Model.ListPrice.ToString("c")</strike></h5>
                    </div>
                    <div class="row mt-3 text-center">
                        <div class="col-3 border-bottom">
                            <div>Quantity</div>
                        </div>
                        <div class="col-3 border-bottom">
                            <div>1-50</div>
                        </div>
                        <div class="col-3 border-bottom">
                            <div>51-100</div>
                        </div>
                        <div class="col-3 border-bottom">
                            <div>100+</div>
                        </div>
                    </div>
                    <div class="row text-center text-danger" style=" font-weight:bold">
                        <div class="col-3">
                            <div>Price</div>
                        </div>
                        <div class="col-3">
                            <div>@Model.Price.ToString("c")</div>
                        </div>
                        <div class="col-3">
                            <div>@Model.Price50.ToString("c")</div>
                        </div>
                        <div class="col-3">
                            <div>@Model.Price100.ToString("c")</div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <p class="text-secondary">@Html.Raw(Model.Description)</p>
                    </div>
                    @*<div class="row mt-3">
                    <div class="col-3 text-primary"><h4>Count</h4></div>
                    <div class="col-9"><input asp-for="Count" class="form-control" /></div>
                    </div> *@
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-12 col-md-6 pb-1">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary bg-gradient fw-semibold btn-sm text-uppercase form-control" style="height:50px;">
                       Back To List
                </a>
            </div>
            <div class="col-12 col-md-6 pb-1">
                <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
            </div>
        </div>
    </div>
</div>