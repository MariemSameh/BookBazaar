@model IEnumerable<Book>

<div class="row pb-3">
	@foreach (var book in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="card border-0 p-3 shadow border-top rounded">
					<div class="card">
						<img src="@book.ImageUrl" class="card-img-top rounded" />

						<div class="card-body">
							<div class="pl-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase text-center mb-0">@book.title</p>
								<p class="card-title text-warning text-center">by <b>@book.Author</b></p>
							</div>
							<div class="pl-1">
								<p class="text-dark opacity-75 text-center mb-0">List Price: <strike><b>$@book.ListPrice.ToString("0.00")</b></strike></p>
							</div>
							<div class="pl-1">
								<p class="text-dark opacity-75 text-center mb-0">As low as: <b>$@book.Price100.ToString("0.00")</b></p>
							</div>
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@book.bookId">
							Details
						</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>